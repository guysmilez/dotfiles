# Path...
export PATH="$PATH:$HOME/.rvm/bin:$HOME/bin" # Add RVM to PATH for scripting
export PATH="$PATH:$(brew --prefix php@7.2)/bin" # Add Homebrew PHP
export PATH="$PATH:$HOME/.composer/vendor/bin" # Add Composer bin
export PATH="$PATH:./vendor/bin" # Add local project Composer bin
export PATH="$PATH:./node_modules/.bin" # Add Node modules local bin
export PATH="$PATH:$HOME/bin/spark-installer" # Add Laravel Spark installer
export PATH="$PATH:/usr/local/opt/node@8/bin:$PATH" # Add Node 8
export PATH="$PATH:$HOME/go/bin" # Golang bin
export PATH="$PATH:$HOME/Code/bin" # Local files

# Xdebug...
export XDEBUG_CONFIG="idekey=VSCODE"

# AWS EC2 tools...
export EC2_HOME=~/bin/ec2-api-tools
export EC2_URL=https://ec2.us-east-1.amazonaws.com
export AWS_DEFAULT_REGION=us-east-1

# Editor...
export EDITOR="/usr/local/bin/code -w -n"

# PostgreSQL URL for Golang migrations...
export POSTGRESQL_URL=$(cat ~/.dso/migrations-database)

###

# Term...
export TERM="xterm-256color"

# Prefer US English and use UTF-8...
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Always enable colored `grep` output...
export GREP_OPTIONS="--color=auto"

# Path...
export PATH="/opt/homebrew/opt/curl/bin:$PATH" # Custom curl...
export PATH="vendor/bin:$PATH" # Add local project Composer bin
export PATH="./node_modules/.bin:$PATH" # Add Node modules local bin
export PATH="$PATH:$HOME/go/bin" # Golang bin
export PATH="$PATH:$HOME/Code/dotfiles/bin" # Local files
export PATH="$HOME/Code/bin:$PATH"
export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH" # asdf shims

# Xdebug...
export XDEBUG_CONFIG="idekey=VSCODE"

# Editor...
export EDITOR="/usr/local/bin/code -w -n"

###

# Term...
export TERM="xterm-256color"

# Prefer US English and use UTF-8...
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Always enable colored `grep` output...
export GREP_OPTIONS="--color=auto"

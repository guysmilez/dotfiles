# Path...
export PATH="$PATH:$HOME/.rvm/bin:$HOME/bin" # Add RVM to PATH for scripting
export PATH="$(brew --prefix php@7.2)/bin:$PATH" # Add Homebrew PHP
export PATH="$HOME/.composer/vendor/bin:$PATH" # Add Composer bin
export PATH="vendor/bin:$PATH" # Add local project Composer bin
export PATH="./node_modules/.bin:$PATH" # Add Node modules local bin
export PATH="$PATH:$HOME/bin/spark-installer" # Add Laravel Spark installer
export PATH="/usr/local/opt/node@8/bin:$PATH" # Add Node 8

# Xdebug...
export XDEBUG_CONFIG="idekey=VSCODE"

# AWS EC2 tools...
export EC2_HOME=~/bin/ec2-api-tools
export EC2_URL=https://ec2.us-east-1.amazonaws.com
export AWS_DEFAULT_REGION=us-east-1

# Editor...
export EDITOR="/Users/mark/bin/subl -w"

###

# Term...
export TERM="xterm-256color"

# Prefer US English and use UTF-8...
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Always enable colored `grep` output...
export GREP_OPTIONS="--color=auto"
